.page
  margin: 6rem auto 0 auto
  width: 90%
  position: relative

  +breakpoint(mobile)
    width: 100%

  &-view
    margin-top: 5rem

  &-header
    height: 50px
    margin-bottom: $spacing-small
    padding: 0 $spacing-medium
    position: relative

    +breakpoint(mobile)
      height: 42px
      padding: 0

  &-title
    font-size: 2rem
    margin 0 auto
    width: 60%

    +breakpoint(mobile)
      width: 70%

  &-subtitle
    font-size: 1.25rem
    padding: $spacing-small 0

  &-content
    margin: 0 auto
    width: 80%

    +breakpoint(mobile)
      width: 90%

    &--dm-combat
      display: flex
      flex-direction: row
      width: 100%

      +breakpoint(mobile)
        display: block
        margin: 0 auto
        width: 90%
