.enter-initiative
  margin: $spacing-medium auto 0 auto
  width: 60%

  &--name-card
    display: flex
    flex-direction: row
    margin-top: $spacing-micro
    width: 80%

    input
      flex-grow: 1

    button
      padding: 0 $spacing-micro
      margin-left: $spacing-micro

      .end-of-round
        font-size: 1.5rem

.combat-content
  margin-top: $spacing-large

  .character-tag
    margin-right: $spacing-micro
    cursor: pointer

    &--container
      display: flex
      flex-direction: row
      justify-content: center
      align-items: center
      flex-wrap: wrap
      width: 90%

    .tag
      font-size: 0.8rem
      margin-bottom: 2px

  .actions
    display: flex
    flex-direction: column
    margin: $spacing-medium auto 0 auto
    width: 70%

    +breakpoint(mobile)
      width: 90%

    button
      margin-bottom: $spacing-small

    input
      text-align: center
      margin: 0 auto
      width: 50%

    &:last-child
      margin-bottom: none

    .attack-container
      display: flex
      flex-direction: row
      justify-content: space-around
      margin: 0 auto
      width: 80%

      button
        width: 45%

      label
        font-size: 1.2rem
        width: 20%

        input
          height: 20px
          width: 20px
          vertical-align: middle
          margin-right: 10px

    .btn-back
      margin-right: $spacing-small

    .target
      border: $border
      border-radius: $border-radius
      cursor: pointer
      padding: $spacing-micro
      position: relative
      margin: 0 auto $spacing-small auto
      width: 50%

      &:hover
        background-color: $purple
        color: $white

      &-selected
        background-color: $purple
        color: $white
        font-weight: bold

    .target-error
      border-color: $error-red
      color: $error-red

.dm-combat-content

  .actions-dm-row
    display: flex
    flex-direction: row
    justify-content: space-around
    width: 100%

    input
      text-align: center
      margin: 0 auto
      width: 50%

    button
      margin auto 0

    &:last-child
      margin-bottom: none

  .actions-dm-column
