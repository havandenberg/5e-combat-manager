.enter-initiative
  margin: $spacing-medium auto 0 auto
  width: 60%

  &--name-card
    display: flex
    flex-direction: row
    margin-top: $spacing-micro
    width: 80%

    input
      flex-grow: 1

    button
      padding: 0 $spacing-micro
      margin-left: $spacing-micro

      .end-of-round
        font-size: 1.5rem

.combat-content
  margin-top: $spacing-large

  .actions
    display: flex
    flex-direction: column
    margin: $spacing-medium auto 0 auto
    width: 70%

    +breakpoint(mobile)
      width: 90%

    button
      margin-bottom: $spacing-small

    &:last-child
      margin-bottom: none

.end-of-round
  align-items: center
  display: flex
  flex-direction: row
  margin: $spacing-small auto
  width: 95%

  &--card
    font-size: 1.2rem

    .end-of-round--line
      flex-basis: 30%

  &--name
    font-size: 0.8rem

    +breakpoint(mobile)
      font-size: 1rem

  &--line
    flex-basis: 20%
    border: 2px solid $black
    border-radius: $border-radius
    height: 0

  &--text
    flex-grow: 1
    text-align: center
    vertical-align: middle
    padding: 0 $spacing-micro

.dm-actions
  display: flex
  flex-direction: row
  justify-content: center
  margin: 0 auto $spacing-small auto
  width: 80%
  position: relative

  button
    margin-right: $spacing-small

  +breakpoint(mobile)
    display: block
    width: 50%

    button
      margin-right: 0
      margin-bottom: $spacing-small
