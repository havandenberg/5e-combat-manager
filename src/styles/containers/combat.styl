.end-of-round
  align-items: center
  display: flex
  flex-direction: row
  margin: $spacing-small auto
  width: 95%

  &--card
    font-size: 1.2rem

    .end-of-round--line
      flex-basis: 30%

  &--name
    font-size: 0.8rem

    +breakpoint(mobile)
      font-size: 1rem

  &--line
    flex-basis: 20%
    border: 2px solid $black
    border-radius: $border-radius
    height: 0

  &--text
    flex-grow: 1
    text-align: center
    vertical-align: middle
    padding: 0 $spacing-micro

.dm-actions
  display: flex
  flex-direction: row
  justify-content: center
  margin: 0 auto $spacing-small auto
  width: 80%
  position: relative

  button
    margin-right: $spacing-small

  +breakpoint(mobile)
    display: block
    width: 50%

    button
      margin-right: 0
      margin-bottom: $spacing-small

.turn-count
  position: absolute
  top: 24px
  right: 100px
  height: 20px
  width: 70px
  font-weight: bold
  font-size: 1.2rem

  &--view
    width: 100%
    text-align: right
    font-size: 1.2rem
    font-weight: bold
    padding-bottom: $spacing-micro
