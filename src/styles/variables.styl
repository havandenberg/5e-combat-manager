// Spacing blocks
$spacing-micro = 0.5rem
$spacing-small = 1rem
$spacing-medium = 3rem
$spacing-large = 4rem
$spacing-jumbo = 8rem

// Screen sizes
$small-screen = 37.5em
$medium-screen = 50em
$large-screen = 70em

// Headings
$h1-fontsize = 2.5rem
$h2-fontsize = 2rem
$h3-fontsize = 1.5rem
$h4-fontsize = 1.125rem
$h5-fontsize = 1rem
$h6-fontsize = 1rem

// Borders
$border = 1px solid $black
$border-radius = 6px

// Typography
$sans-serif = Arial, 'Helvetica Neue', Helvetica, sans-serif
