html
  box-sizing: border-box
  color: $black
  font-size: 16px
  line-height: 1.5

body
  -moz-osx-font-smoothing: grayscale
  -webkit-font-smoothing: antialiased
  text-rendering: optimizeLegibility
  margin: 0
  font-family: 'Raleway', sans-serif
  background-color: #F8E8D6

body:before
  content: ' '
  display: block
  position: fixed
  left: 0
  top: 0
  width: 100%
  height: 100%
  opacity: 0.6
  background-image: url(http://www.zingerbugimages.com/backgrounds/tan_parchment_paper_wallpaper_texture_seamless.jpg)
  background-position: top left
  background-repeat: repeat
  background-attachment: fixed

ul
  padding: 0
  li
    list-style-type: none

img
  max-width: 100%
  border-radius: $border-radius

button, input[type='submit']
  background: transparent
  border: 0
  cursor: pointer
  font-family: inherit
  font-size: inherit
  outline: none
  padding: 0

em
  font-style: italic

strong
  font-weight: 600

small
  font-size: 75%

hr
  border-top: $border

.hide
  display: none

.left-align
  text-align: left

.right-align
  text-align: right

.center
  text-align: center
  margin: 0 auto

.vcenter
  position: relative
  top: 50%
  transform: translateY(-50%)

.pull-left
  float: left

.pull-right
  float: right

.circle
  border-radius: 50%

.full-width
  width: 100%

.no-decoration
  color: $black
  text-decoration: none

.image-large
  height: 3rem

.drag-and-drop
  border-radius: $border-radius
  cursor: pointer
  margin: 0 auto
  text-align: center
  vertical-align: middle
  width: 204px

.upload-file
  font-size: 1.2rem
  text-align: center
  padding: $spacing-small 0 $spacing-medium 0

  &--uploading
    font-size: 1rem
    padding: 0

.scroll
  overflow-y: auto
  max-height: 70vh

  &-view
    max-height: 78vh
    width: 100%

    +breakpoint(mobile)
      display: flex
      flex-direction: row
      align-items: flex-start
      justify-content: space-between

  &-combat
    overflow-x: auto
    overflow-y: hidden
    max-height: auto

  &-characters
    max-height: 72vh
    min-height: 231px

  &-folder
    overflow-x: auto
    overflow-y: hidden
    max-height: auto

.scroll::-webkit-scrollbar
  width: 14px;

.scroll::-webkit-scrollbar-thumb
  height: 6px;
  border: 4px solid rgba(0, 0, 0, 0);
  background-clip: padding-box;
  -webkit-border-radius: 7px;
  background-color: rgba(0, 0, 0, 0.15);
  -webkit-box-shadow: inset -1px -1px 0px rgba(0, 0, 0, 0.05), inset 1px 1px 0px rgba(0, 0, 0, 0.05);

.scroll::-webkit-scrollbar-button
  width: 0
  height: 0
  display: none

.scroll::-webkit-scrollbar-corner
  background-color: transparent
