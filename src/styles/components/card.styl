.card
  border: $border
  border-radius: $border-radius
  position: relative
  transition: all 0.1s ease

  &-unselectable
    cursor: pointer
    display: flex
    flex-direction: row
    padding: $spacing-small $spacing-small $spacing-small $spacing-small

    &:hover
      border: 2px solid $black

  &-selectable
    cursor: pointer
    display: flex
    flex-direction: row
    padding: $spacing-small

    &:hover
      border: 5px solid $purple

  &-selected
    border: 5px solid $purple

  &-choose
    padding: $spacing-small

  &-container
    display: flex
    flex-wrap: wrap
    justify-content: space-between
    margin: 0 auto
    width: 100%

  &-wrapper
    margin-bottom: $spacing-small
    width: 48%

    +breakpoint(mobile)
      margin: 0 auto $spacing-small auto
      width: 90%

    .copies-container
      display: flex
      flex-direction: row
      flex-wrap: wrap
      text-align: center
      margin: $spacing-small auto 0 auto
      width: 90%

      .copy
        border: $border
        border-radius: $border-radius
        padding: $spacing-micro
        margin-right: $spacing-micro
        margin-bottom: $spacing-micro
        font-size: 1rem
        line-height: 0.7
        cursor: pointer

        &-active
          background-color: lighten($purple, 20%)

        &-removed
          background-color: $gray

      .add-copy
        border: $border
        border-radius: $border-radius
        padding: 5px
        margin-bottom: $spacing-micro
        cursor: pointer
        height: 1rem
        width: 1rem

  &-avatar
    margin: auto $spacing-micro

    img
      height: 160px

    &--large
      img
        height: 250px

  &-text
    display: flex
    flex-direction: column
    flex-grow: 1
    flex-basis: 70%

    +breakpoint(mobile)
      flex-basis: 60%

  &-name
    font-size: 1.5rem
    margin-bottom: $spacing-micro

  &-field
    font-size: 1rem
    margin-bottom: $spacing-micro

  &-forward
    margin: auto 0

    img
      width: 20px

  &--tag
    img
      height: 24px
      padding: 0 7px

    &:hover
      cursor: pointer

    &-container
      position: absolute
      top: 10px
      right: 10px
      display: flex
      flex-direction: row
