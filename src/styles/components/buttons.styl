.btn
  border-radius: 6px
  color: $white
  display: inline-block
  font-family: inherit
  font-size: 1.125rem
  height: 3rem
  padding: 0 32px
  transition: all 0.3s ease

  +breakpoint(mobile)
    width: 100%

  &-nav
    background-color: $black
    border: $border
    border-color: $white

    +breakpoint(mobile)
      width: auto

    &:hover
      background-color: lighten($black, 10%)

    &:active
      background-color: lighten($black, 10%)

  &-action
    background-color: $black
    border: none

    &:hover
      background-color: lighten($black, 10%)

    &:active
      background-color: lighten($black, 10%)

  &-disabled
    background-color: $gray

  &-delete
    background-color: darken($error-red, 20%)

    &:hover
      background-color: darken($error-red, 10%)

    &:active
      background-color: darken($error-red, 10%)

  &-choose
    background-color: darken($success-green, 20%)

    &:hover
      background-color: darken($success-green, 10%)

    &:active
      background-color: darken($success-green, 10%)

  &-back
    height: 100%
    padding: 0 $spacing-micro

    img
      height: 100%

  &-settings
    position: absolute
    top: 20px
    right: 20px
    height: 30px
    width: 30px

    img
      height: 100%

  &-toggle-start-combat
    position: absolute
    top: 0px
    right: 20px
