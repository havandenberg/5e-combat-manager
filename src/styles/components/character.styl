.character
  &-avatar
    height: 200px

    &--combat
      height: 160px

  &-stats
    display: flex
    flex-direction: row
    justify-content: space-between
    margin: 0 auto
    width: 60%

    +breakpoint(mobile)
      width: 100%

    &--base
      flex-wrap: wrap
      width: 90%

      div
        margin-bottom: $spacing-micro
        width: 100px

    &--container
      margin-top: $spacing-micro
      width: 80%

      +breakpoint(mobile)
        width: 100%

      div
        width: 32px

    &--card
      font-size: 0.8rem

      div
        width: 32px

    &--value
      font-size: 1.3rem

      div
        width: 32px

    &--notes
      width: 300px
      white-space: pre
      margin-bottom: $spacing-small
      font-size: 0.8
      line-height: 0.8


      &-label
        width: 100%
        text-align: center
        margin-bottom: $spacing-small

    input
      text-align: center
      margin-right: $spacing-small

  &-details
    height: 20px
    width: 20px
    margin: 0 auto
    cursor: pointer

    &--dm
      top: auto
      bottom: 0

.edit-character
  .notes
    textarea
      height: 400px
