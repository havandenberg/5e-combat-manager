.character

  &-container
    display: flex
    flex-direction: column
    justify-content: space-between
    margin: 0 auto
    width: 318px

  &-card
    background-image: url('/images/forward.svg')
    background-position: right $spacing-small center
    background-repeat: no-repeat
    background-size: 16px
    border: $border
    border-radius: $border-radius
    cursor: pointer
    display: flex
    flex-direction: row
    margin: 0 auto $spacing-small auto
    padding: $spacing-small $spacing-medium $spacing-small $spacing-small
    transition: all 0.1s ease
    width: 250px

    &:hover
      border: 2px solid $black

    +breakpoint(mobile)
      width: 75%

    &--avatar
      flex-basis: 30%
      margin: auto $spacing-micro

    &--text
      display: flex
      flex-direction: column
      flex-basis: 70%
      flex-grow: 1

    &--name
      font-size: 1.125rem

    &--field
      font-size: 1rem
      margin-bottom: $spacing-micro

  &-stats
    display: flex
    flex-direction: row
    justify-content: space-between
    margin: 0 auto
    width: 60%

    input
      margin-right: $spacing-small

    &:last-child
      margin-right: 0

  &-grid
    position: relative
    float: left
    width: 46%

  &-avatar
    height: 200px
