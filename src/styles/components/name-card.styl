.name-card
  border: $border
  border-radius: $border-radius
  padding: $spacing-micro
  position: relative
  margin-bottom: $spacing-small

  &:hover
    border: 2px solid $black

  &--container
    display: flex
    flex-direction: column
    flex-basis: 20%
    margin-right: $spacing-medium

    +breakpoint(mobile)
      margin: 0 auto $spacing-small auto
      width: 50%

  &--inverted
    background-color: $black
    color: $white
    font-weight: bold

  &--title
    font-size: 1rem
    text-align: center

  &--tag
    float: right

    img
      height: 24px
      padding: 0 7px

    &-init
      top: 25px

  &--not-ready
    background-color: lighten($error-red, 30%)

  &--ready
    background-color: lighten($success-green, 30%)
