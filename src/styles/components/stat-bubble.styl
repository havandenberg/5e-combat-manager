.stat-bubble
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  border: $border

  &:last-child
    margin-right: 0

  &-container
    display: flex
    flex-direction: row
    justify-content: center

  &--large
    width: 100px
    height: 100px
    margin-right: 20px

  &--med
    width: 50px
    height: 50px
    margin-right: 15px

  &--small
    width: 25px
    height: 25px
    margin-right: 10px

  &--hp
    background-color: $red

  &--ac
    background-color: $blue

  &--init
    background-color: $green

  &--label
    color: $white
    font-size: 0.6rem

  &--text
    color: $white
    background-color: transparent
    font-weight: bold
