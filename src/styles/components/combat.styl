.combat

  &-container
    display: flex
    flex-wrap: wrap
    justify-content: space-between
    margin: 0 auto
    width: 100%

  &-card-wrapper
    margin-bottom: $spacing-small
    width: 48%

    +breakpoint(mobile)
      margin: 0 auto $spacing-small auto
      width: 90%

  &-card
    background-image: url('/images/forward.svg')
    background-position: right $spacing-small center
    background-repeat: no-repeat
    background-size: 16px
    border: $border
    border-radius: $border-radius
    cursor: pointer
    display: flex
    flex-direction: row
    padding: $spacing-small $spacing-medium $spacing-small $spacing-small
    transition: all 0.1s ease

    &:hover
      border: 2px solid $black

    &--text
      display: flex
      flex-direction: column
      flex-basis: 70%
      flex-grow: 1

    &--name
      font-size: 1.125rem

    &--field
      font-size: 1rem
      margin-bottom: $spacing-micro

  &-grid
    position: relative
    float: left
    width: 46%
