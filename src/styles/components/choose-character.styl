.choose-character
  position: relative

  &--container
    display: flex
    flex-direction: row
    justify-content: flex-start

  &--remove
    height: 20px
    width: 20px
    cursor: pointer
    position: absolute
    top: -10px
    right: 0

  &--add
    display: flex
    cursor: pointer
    justify-content: center
    align-items: center
    border-radius: 50%
    border: $border
    height: 80px
    width: 80px

    img
      width: 50px
      height: 50px
      border-radius: $border-radius

  .adding
    background-color: lighten($success-green, 20%)
